---
import DiscordIcon from './icons/DiscordIcon.astro';
import { social } from '../site.config';
---

<section class="hero">
  <div class="hero-bg"></div>
  <div class="hero-border-top"></div>
  <div class="hero-border-bottom"></div>
  <div class="hero-content">
    <h1 class="hero-title">
      <span class="title-decoration">—</span>
      Gas Town Hall
      <span class="title-decoration">—</span>
    </h1>
    <h2 class="hero-headline">
      Gas Town is powerful but chaotic.
    </h2>
    <p class="hero-subline">We help you wrangle the chimps.</p>
    <p class="hero-description">
      An orchestration layer for AI coding agents. Track accountability, measure quality, and scale your AI-assisted engineering workflows.
    </p>
    <div class="hero-actions">
      <a href="/docs" class="btn btn-primary">Read the Docs</a>
      <a href={social.discord} target="_blank" rel="noopener" class="btn btn-secondary">
        <DiscordIcon size={20} />
        Join Discord
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 75vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(180deg, #E8DCC8 0%, #D9C9B0 30%, #D4C4A8 70%, #C9B896 100%);
    z-index: -2;
  }

  /* Parchment texture overlay */
  .hero-bg::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.1'/%3E%3C/svg%3E");
    z-index: -1;
  }

  /* Industrial vignette edges */
  .hero-bg::after {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 120% 80% at 50% 100%, rgba(62, 39, 35, 0.4) 0%, transparent 60%),
      radial-gradient(ellipse 100% 60% at 0% 100%, rgba(62, 39, 35, 0.5) 0%, transparent 50%),
      radial-gradient(ellipse 100% 60% at 100% 100%, rgba(62, 39, 35, 0.5) 0%, transparent 50%),
      radial-gradient(ellipse 80% 40% at 50% 0%, rgba(139, 115, 85, 0.2) 0%, transparent 60%);
    z-index: 0;
    pointer-events: none;
  }

  /* Top industrial border */
  .hero-border-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 12px;
    background: linear-gradient(180deg, #5D4037 0%, #3E2723 100%);
    border-bottom: 3px solid var(--color-brass);
    z-index: 1;
  }

  .hero-border-top::before,
  .hero-border-top::after {
    content: '';
    position: absolute;
    bottom: -8px;
    width: 16px;
    height: 16px;
    background: radial-gradient(circle, var(--color-brass) 40%, var(--color-bronze) 60%);
    border-radius: 50%;
    border: 2px solid var(--color-bronze);
    box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-border-top::before {
    left: 15%;
  }

  .hero-border-top::after {
    right: 15%;
  }

  /* Bottom industrial border */
  .hero-border-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 12px;
    background: linear-gradient(0deg, #5D4037 0%, #3E2723 100%);
    border-top: 3px solid var(--color-brass);
    z-index: 1;
  }

  .hero-border-bottom::before,
  .hero-border-bottom::after {
    content: '';
    position: absolute;
    top: -8px;
    width: 16px;
    height: 16px;
    background: radial-gradient(circle, var(--color-brass) 40%, var(--color-bronze) 60%);
    border-radius: 50%;
    border: 2px solid var(--color-bronze);
    box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-border-bottom::before {
    left: 15%;
  }

  .hero-border-bottom::after {
    right: 15%;
  }

  .hero-content {
    max-width: 800px;
    text-align: center;
    position: relative;
    z-index: 2;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 2rem 0;
    letter-spacing: 0.15em;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .title-decoration {
    color: var(--color-brass);
    font-weight: 400;
  }

  .hero-headline {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    font-weight: 600;
    line-height: 1.2;
    color: var(--color-text);
    margin: 0 0 0.5rem 0;
    letter-spacing: 0.02em;
  }

  .hero-subline {
    font-family: var(--font-mono);
    font-size: clamp(1.625rem, 3.75vw, 2.5rem);
    font-weight: 700;
    color: #50C878;
    margin: 0 0 1.5rem 0;
    letter-spacing: -0.02em;
    text-shadow:
      1px 1px 0 #2C1810,
      -1px -1px 0 #2C1810,
      1px -1px 0 #2C1810,
      -1px 1px 0 #2C1810;
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto 2rem auto;
    line-height: 1.7;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 65vh;
      padding: 3rem 1.5rem;
    }

    .hero-title {
      flex-direction: column;
      gap: 0;
    }

    .title-decoration {
      display: none;
    }

    .hero-description {
      font-size: 1rem;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
    }

    .hero-actions .btn {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }

    .hero-border-top::before,
    .hero-border-top::after,
    .hero-border-bottom::before,
    .hero-border-bottom::after {
      display: none;
    }
  }
</style>
