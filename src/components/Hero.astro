---
import DiscordIcon from './icons/DiscordIcon.astro';
import { social } from '../site.config';
---

<section class="hero">
  <div class="hero-bg"></div>
  <div class="hero-gear hero-gear-left"></div>
  <div class="hero-gear hero-gear-right"></div>
  <div class="hero-border-top"></div>
  <div class="hero-border-bottom"></div>
  <div class="hero-content">
    <h1 class="hero-title">
      <span class="title-decoration">—</span>
      Gas Town Hall
      <span class="title-decoration">—</span>
    </h1>
    <h2 class="hero-headline">
      Gas Town is powerful but chaotic.
    </h2>
    <p class="hero-subline">We help you wrangle the chimps.</p>
    <p class="hero-description">
      An orchestration layer for AI coding agents. Track accountability, measure quality, and scale your AI-assisted engineering workflows.
    </p>
    <div class="hero-actions">
      <a href="/docs" class="btn btn-primary">Read the Docs</a>
      <a href={social.discord} target="_blank" rel="noopener" class="btn btn-secondary">
        <DiscordIcon size={20} />
        Join Discord
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 75vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background: transparent;
    z-index: -2;
  }

  /* Rotating gear decorations */
  .hero-gear {
    position: absolute;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    opacity: 0.2;
    z-index: 0;
    background:
      conic-gradient(
        from 0deg,
        var(--color-brass) 0deg,
        transparent 20deg,
        transparent 40deg,
        var(--color-brass) 40deg,
        var(--color-brass) 60deg,
        transparent 60deg,
        transparent 80deg,
        var(--color-brass) 80deg,
        var(--color-brass) 100deg,
        transparent 100deg,
        transparent 120deg,
        var(--color-brass) 120deg,
        var(--color-brass) 140deg,
        transparent 140deg,
        transparent 160deg,
        var(--color-brass) 160deg,
        var(--color-brass) 180deg,
        transparent 180deg,
        transparent 200deg,
        var(--color-brass) 200deg,
        var(--color-brass) 220deg,
        transparent 220deg,
        transparent 240deg,
        var(--color-brass) 240deg,
        var(--color-brass) 260deg,
        transparent 260deg,
        transparent 280deg,
        var(--color-brass) 280deg,
        var(--color-brass) 300deg,
        transparent 300deg,
        transparent 320deg,
        var(--color-brass) 320deg,
        var(--color-brass) 340deg,
        transparent 340deg,
        transparent 360deg
      );
  }

  .hero-gear::before {
    content: '';
    position: absolute;
    inset: 30%;
    border-radius: 50%;
    background: var(--color-brass);
  }

  .hero-gear-left {
    top: 10%;
    left: -50px;
    animation: rotateClockwise 60s linear infinite;
  }

  .hero-gear-right {
    bottom: 10%;
    right: -50px;
    animation: rotateCounterClockwise 45s linear infinite;
  }

  /* Top industrial border with pulsing rivets */
  .hero-border-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 12px;
    background: linear-gradient(180deg, #5D4037 0%, #3E2723 100%);
    border-bottom: 3px solid var(--color-brass);
    z-index: 1;
  }

  .hero-border-top::before,
  .hero-border-top::after {
    content: '';
    position: absolute;
    bottom: -8px;
    width: 16px;
    height: 16px;
    background: radial-gradient(circle, var(--color-brass) 40%, var(--color-bronze) 60%);
    border-radius: 50%;
    border: 2px solid var(--color-bronze);
    animation: pulseGlow 3s ease-in-out infinite;
  }

  .hero-border-top::before {
    left: 15%;
  }

  .hero-border-top::after {
    right: 15%;
    animation-delay: 1.5s;
  }

  /* Bottom industrial border */
  .hero-border-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 12px;
    background: linear-gradient(0deg, #5D4037 0%, #3E2723 100%);
    border-top: 3px solid var(--color-brass);
    z-index: 1;
  }

  .hero-border-bottom::before,
  .hero-border-bottom::after {
    content: '';
    position: absolute;
    top: -8px;
    width: 16px;
    height: 16px;
    background: radial-gradient(circle, var(--color-brass) 40%, var(--color-bronze) 60%);
    border-radius: 50%;
    border: 2px solid var(--color-bronze);
    animation: pulseGlow 3s ease-in-out infinite;
  }

  .hero-border-bottom::before {
    left: 15%;
    animation-delay: 0.75s;
  }

  .hero-border-bottom::after {
    right: 15%;
    animation-delay: 2.25s;
  }

  .hero-content {
    max-width: 800px;
    text-align: center;
    position: relative;
    z-index: 2;
  }

  /* Entrance animations */
  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 2rem 0;
    letter-spacing: 0.15em;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    animation: fadeInDown 0.8s var(--ease-out-expo) both;
  }

  .title-decoration {
    color: var(--color-brass);
    font-weight: 400;
    animation: float 4s ease-in-out infinite;
  }

  .title-decoration:first-child {
    animation-delay: 0s;
  }

  .title-decoration:last-child {
    animation-delay: 2s;
  }

  .hero-headline {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    font-weight: 600;
    line-height: 1.2;
    color: var(--color-text);
    margin: 0 0 0.5rem 0;
    letter-spacing: 0.02em;
    animation: fadeInUp 0.8s var(--ease-out-expo) 0.1s both;
  }

  .hero-subline {
    font-family: var(--font-mono);
    font-size: clamp(1.625rem, 3.75vw, 2.5rem);
    font-weight: 700;
    color: #39FF14;
    margin: 0 0 1.5rem 0;
    letter-spacing: -0.02em;
    text-shadow:
      1px 1px 0 #2C1810,
      -1px -1px 0 #2C1810,
      1px -1px 0 #2C1810,
      -1px 1px 0 #2C1810;
    animation: fadeInUp 0.8s var(--ease-out-expo) 0.2s both;
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto 2rem auto;
    line-height: 1.7;
    animation: fadeInUp 0.8s var(--ease-out-expo) 0.3s both;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeInUp 0.8s var(--ease-out-expo) 0.4s both;
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 65vh;
      padding: 3rem 1.5rem;
    }

    .hero-gear {
      width: 120px;
      height: 120px;
      opacity: 0.05;
    }

    .hero-gear-left {
      left: -40px;
    }

    .hero-gear-right {
      right: -40px;
    }

    .hero-title {
      flex-direction: column;
      gap: 0;
    }

    .title-decoration {
      display: none;
    }

    .hero-description {
      font-size: 1rem;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
    }

    .hero-actions .btn {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }

    .hero-border-top::before,
    .hero-border-top::after,
    .hero-border-bottom::before,
    .hero-border-bottom::after {
      display: none;
    }
  }
</style>
