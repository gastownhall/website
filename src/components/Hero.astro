---
import DiscordIcon from './icons/DiscordIcon.astro';
import { site, social } from '../site.config';
---

<section class="hero">
  <div class="hero-bg"></div>
  <div class="hero-border-top"></div>
  <div class="hero-border-bottom"></div>
  <picture>
    <source srcset="/images/mayor-of-gastown-360.webp" type="image/webp" />
    <img
      src="/images/mayor-of-gastown-360.png"
      alt="Mayor of Gas Town"
      class="mayor-image"
    />
  </picture>
  <div class="hero-content">
    <h1 class="hero-title">
      <span class="title-decoration">—</span>
      Gas Town Hall
      <span class="title-decoration">—</span>
    </h1>
    <h2 class="hero-headline">
      Orchestrate unlimited AI coding agents.<br />Scale without limits.
    </h2>
    <p class="hero-tagline">We help you wrangle the chimps.</p>
    <p class="hero-description">
      Works with Claude Code, Codex, Gemini and more!
    </p>
    <div class="hero-actions">
      <a href={site.docsUrl} class="btn btn-primary">Get Started</a>
      <a
        href={social.discord}
        target="_blank"
        rel="noopener"
        class="btn btn-secondary"
      >
        <DiscordIcon size={20} />
        Join Discord
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 75vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background: transparent;
    z-index: -2;
  }

  /* Top industrial border with pulsing rivets */
  .hero-border-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 12px;
    background: linear-gradient(180deg, #5d4037 0%, #3e2723 100%);
    border-bottom: 3px solid var(--color-brass);
    z-index: 1;
  }

  .hero-border-top::before,
  .hero-border-top::after {
    content: '';
    position: absolute;
    bottom: -8px;
    width: 16px;
    height: 16px;
    background: radial-gradient(
      circle,
      var(--color-brass) 40%,
      var(--color-bronze) 60%
    );
    border-radius: 50%;
    border: 2px solid var(--color-bronze);
    animation: pulseGlow 3s ease-in-out infinite;
  }

  .hero-border-top::before {
    left: 15%;
  }

  .hero-border-top::after {
    right: 15%;
    animation-delay: 1.5s;
  }

  /* Bottom industrial border */
  .hero-border-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 12px;
    background: linear-gradient(0deg, #5d4037 0%, #3e2723 100%);
    border-top: 3px solid var(--color-brass);
    z-index: 1;
  }

  .hero-border-bottom::before,
  .hero-border-bottom::after {
    content: '';
    position: absolute;
    top: -8px;
    width: 16px;
    height: 16px;
    background: radial-gradient(
      circle,
      var(--color-brass) 40%,
      var(--color-bronze) 60%
    );
    border-radius: 50%;
    border: 2px solid var(--color-bronze);
    animation: pulseGlow 3s ease-in-out infinite;
  }

  .hero-border-bottom::before {
    left: 15%;
    animation-delay: 0.75s;
  }

  .hero-border-bottom::after {
    right: 15%;
    animation-delay: 2.25s;
  }

  .mayor-image {
    position: absolute;
    top: 2rem;
    left: max(2rem, calc((100% - var(--max-width)) / 2 + 2rem));
    width: 180px;
    height: auto;
    z-index: 3;
  }

  @media (max-width: 1024px) {
    .mayor-image {
      display: none;
    }
  }

  .hero-content {
    max-width: 800px;
    text-align: center;
    position: relative;
    z-index: 2;
  }

  /* Entrance animations */
  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 2rem 0;
    letter-spacing: 0.15em;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .title-decoration {
    color: var(--color-brass);
    font-weight: 400;
    animation: float 4s ease-in-out infinite;
  }

  .title-decoration:first-child {
    animation-delay: 0s;
  }

  .title-decoration:last-child {
    animation-delay: 2s;
  }

  .hero-headline {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    font-weight: 600;
    line-height: 1.3;
    color: var(--color-text);
    margin: 0 0 1rem 0;
    letter-spacing: 0.02em;
  }

  .hero-tagline {
    font-family: var(--font-mono);
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-weight: 600;
    color: #39ff14;
    margin: 0 0 1rem 0;
    letter-spacing: -0.01em;
    text-shadow:
      1px 1px 0 #2c1810,
      -1px -1px 0 #2c1810,
      1px -1px 0 #2c1810,
      -1px 1px 0 #2c1810;
  }

  .hero-description {
    font-size: 1rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto 1.5rem auto;
    line-height: 1.6;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .open-source-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    text-decoration: none;
    margin-top: 1.25rem;
    transition: color var(--duration-fast) var(--ease-in-out-smooth);
  }

  .open-source-link:hover {
    color: var(--color-brass);
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 65vh;
      padding: 3rem 1.5rem;
    }

    .hero-title {
      flex-direction: column;
      gap: 0;
    }

    .title-decoration {
      display: none;
    }

    .hero-description {
      font-size: 1rem;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
    }

    .hero-actions .btn {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }

    .hero-border-top::before,
    .hero-border-top::after,
    .hero-border-bottom::before,
    .hero-border-bottom::after {
      display: none;
    }
  }
</style>
