---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';

const blogPosts = [
  {
    title: "Welcome to Gas Town",
    slug: "welcome-to-gas-town",
    description: "The launch post introducing Gas Town - an orchestration layer for AI coding agents.",
    date: "Jan 1, 2026"
  },
  {
    title: "The Future of Coding Agents",
    slug: "future-of-coding-agents",
    description: "Predictions about IDEs, big companies, and the evolution of coding agents.",
    date: "Jan 5, 2026"
  },
  {
    title: "Gas Town Emergency User Manual",
    slug: "emergency-user-manual",
    description: "How to keep up with 100+ PRs using Gas Town and PR Sheriffs.",
    date: "Jan 15, 2026"
  },
  {
    title: "BAGS and the Creator Economy",
    slug: "bags-creator-economy",
    description: "A bizarre story about tokens, creators, and the Gas Town economy.",
    date: "Jan 17, 2026"
  },
  {
    title: "Stevey's Birthday Blog",
    slug: "steveys-birthday-blog",
    description: "Reflections on Money, Time, Power, Control, and Direction in AI.",
    date: "Jan 19, 2026"
  }
];
---

<BaseLayout title="Gas Town Hall">
  <Hero />

  <!-- Blog Section -->
  <section class="section">
    <h2>From the Blog</h2>
    <p class="section-intro">Thoughts on AI agents, orchestration, and the future of coding.</p>
    <div class="grid grid-2">
      {blogPosts.map(post => (
        <a href={`/blog/${post.slug}`} class="card blog-card">
          <span class="blog-date">{post.date}</span>
          <h3>{post.title}</h3>
          <p>{post.description}</p>
        </a>
      ))}
    </div>
  </section>

  <!-- Docs Section -->
  <section class="section section-alt-wrapper">
    <div class="section-inner">
      <h2>Documentation</h2>
      <p class="section-intro">Everything you need to get started with Gas Town.</p>
      <div class="grid grid-3">
        <a href="/docs/installing" class="card">
          <h3>Getting Started</h3>
          <p>Install Gas Town and run your first orchestrated workflow.</p>
        </a>
        <a href="/docs/concepts/convoy" class="card">
          <h3>Core Concepts</h3>
          <p>Learn about convoys, polecats, molecules, and the propulsion principle.</p>
        </a>
        <a href="/docs/design/architecture" class="card">
          <h3>Architecture</h3>
          <p>Understand the system design and how components interact.</p>
        </a>
        <a href="/docs/reference" class="card">
          <h3>CLI Reference</h3>
          <p>Complete reference for all Gas Town commands.</p>
        </a>
        <a href="/docs/glossary" class="card">
          <h3>Glossary</h3>
          <p>Definitions of Gas Town terminology and concepts.</p>
        </a>
        <a href="/docs" class="card">
          <h3>All Docs</h3>
          <p>Browse the complete documentation.</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Community Section -->
  <section class="section community-section">
    <h2>Join the Community</h2>
    <p class="section-intro">Connect with other Gas Town users and contributors.</p>
    <div class="community-actions">
      <a href="https://discord.gg/pKsyZJ3S" target="_blank" rel="noopener" class="btn btn-discord btn-large">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
