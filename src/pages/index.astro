        </svg>
        View on GitHub
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .section-intro {
    color: var(--color-text-muted);
    font-size: 1.125rem;
    margin-bottom: var(--space-lg);
    max-width: 600px;
  }

  .section h2 {
    margin-bottom: var(--space-sm);
  }

  .section-alt-wrapper {
    background: var(--color-bg-alt);
    padding: var(--space-xl) 0;
    margin: var(--space-xl) 0;
  }

  .section-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }

  /* Blog cards */
  .blog-card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .blog-card:hover {
    text-decoration: none;
  }

  .blog-card:hover h3 {
    color: var(--color-accent);
  }

  .blog-card h3 {
    transition: color 0.2s ease;
    margin-top: var(--space-sm);
  }

  .blog-date {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-weight: 500;
  }

  /* Doc cards as links */
  .grid a.card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .grid a.card:hover {
    text-decoration: none;
  }

  .grid a.card:hover h3 {
    color: var(--color-accent);
  }

  .grid a.card h3 {
    transition: color 0.2s ease;
  }

  /* Community section */
  .community-section {
    text-align: center;
  }

  .community-section .section-intro {
    margin-left: auto;
    margin-right: auto;
  }

  .community-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-large {
    padding: 1rem 2rem;
    font-size: 1.0625rem;
  }

  @media (max-width: 768px) {
    .section-alt-wrapper {
      margin: var(--space-lg) 0;
    }

    .section-inner {
      padding: 0 var(--space-md);
    }

    .community-actions {
      flex-direction: column;
      align-items: center;
    }

    .community-actions .btn {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
  }
</style>
