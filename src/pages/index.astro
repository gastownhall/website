---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import DiscordIcon from '../components/icons/DiscordIcon.astro';
import XIcon from '../components/icons/XIcon.astro';
import GitHubIcon from '../components/icons/GitHubIcon.astro';
import { site, social, blogPosts } from '../site.config';
---

<BaseLayout title={site.name}>
  <Hero />

  <section class="section">
    <h2>From the Blog</h2>
    <p class="section-intro">Thoughts on AI agents, orchestration, and the future of coding.</p>
    <div class="grid grid-2">
      {blogPosts.map(post => (
        <a href={`/blog/${post.slug}`} class="card blog-card">
          <span class="blog-date">{post.date}</span>
          <h3>{post.title}</h3>
          <p>{post.description}</p>
        </a>
      ))}
    </div>
  </section>

  <section class="section section-alt-wrapper">
    <div class="section-inner">
      <h2>Documentation</h2>
      <p class="section-intro">Everything you need to get started with Gas Town.</p>
      <div class="grid grid-3">
        <a href="/docs/installing" class="card">
          <h3>Getting Started</h3>
          <p>Install Gas Town and run your first orchestrated workflow.</p>
        </a>
        <a href="/docs/concepts/convoy" class="card">
          <h3>Core Concepts</h3>
          <p>Learn about convoys, polecats, molecules, and the propulsion principle.</p>
        </a>
        <a href="/docs/design/architecture" class="card">
          <h3>Architecture</h3>
          <p>Understand the system design and how components interact.</p>
        </a>
        <a href="/docs/reference" class="card">
          <h3>CLI Reference</h3>
          <p>Complete reference for all Gas Town commands.</p>
        </a>
        <a href="/docs/glossary" class="card">
          <h3>Glossary</h3>
          <p>Definitions of Gas Town terminology and concepts.</p>
        </a>
        <a href="/docs" class="card">
          <h3>All Docs</h3>
          <p>Browse the complete documentation.</p>
        </a>
      </div>
    </div>
  </section>

  <section class="section community-section">
    <h2>Join the Community</h2>
    <p class="section-intro">Connect with other Gas Town users and contributors.</p>
    <div class="community-actions">
      <a href={social.discord} target="_blank" rel="noopener" class="btn btn-discord btn-large">
        <DiscordIcon />
        Join Discord
      </a>
      <a href={social.x} target="_blank" rel="noopener" class="btn btn-secondary btn-large">
        <XIcon />
        Follow on X
      </a>
      <a href={social.github} target="_blank" rel="noopener" class="btn btn-secondary btn-large">
        <GitHubIcon />
        View on GitHub
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .section-intro {
    color: var(--color-text-muted);
    font-size: 1.125rem;
    margin-bottom: var(--space-lg);
    max-width: 600px;
  }

  .section h2 {
    margin-bottom: var(--space-sm);
  }

  .section-alt-wrapper {
    background: var(--color-bg-alt);
    padding: var(--space-xl) 0;
    margin: var(--space-xl) 0;
  }

  .section-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }

  .blog-card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .blog-card:hover {
    text-decoration: none;
  }

  .blog-card:hover h3 {
    color: var(--color-accent);
  }

  .blog-card h3 {
    transition: color 0.2s ease;
    margin-top: var(--space-sm);
  }

  .blog-date {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-weight: 500;
  }

  .grid a.card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .grid a.card:hover {
    text-decoration: none;
  }

  .grid a.card:hover h3 {
    color: var(--color-accent);
  }

  .grid a.card h3 {
    transition: color 0.2s ease;
  }

  .community-section {
    text-align: center;
  }

  .community-section .section-intro {
    margin-left: auto;
    margin-right: auto;
  }

  .community-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-large {
    padding: 1rem 2rem;
    font-size: 1.0625rem;
  }

  @media (max-width: 768px) {
    .section-alt-wrapper {
      margin: var(--space-lg) 0;
    }

    .section-inner {
      padding: 0 var(--space-md);
    }

    .community-actions {
      flex-direction: column;
      align-items: center;
    }

    .community-actions .btn {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
  }
</style>
