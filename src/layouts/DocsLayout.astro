---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<BaseLayout title={`${title} | Gas Town Docs`} description={description}>
  <div class="docs-container">
    <aside class="docs-sidebar">
      <nav>
        <h3>Overview</h3>
        <ul>
          <li><a href="/docs">Introduction</a></li>
          <li><a href="/docs/glossary">Glossary</a></li>
          <li><a href="/docs/reference">Reference</a></li>
          <li><a href="/docs/installing">Installing</a></li>
        </ul>

        <h3>Concepts</h3>
        <ul>
          <li><a href="/docs/concepts/convoy">Convoy</a></li>
          <li><a href="/docs/concepts/identity">Identity</a></li>
          <li><a href="/docs/concepts/molecules">Molecules</a></li>
          <li><a href="/docs/concepts/polecat-lifecycle">Polecat Lifecycle</a></li>
          <li><a href="/docs/concepts/propulsion-principle">Propulsion Principle</a></li>
        </ul>

        <h3>Design</h3>
        <ul>
          <li><a href="/docs/design/architecture">Architecture</a></li>
          <li><a href="/docs/design/convoy-lifecycle">Convoy Lifecycle</a></li>
          <li><a href="/docs/design/dog-pool-architecture">Dog Pool Architecture</a></li>
          <li><a href="/docs/design/escalation">Escalation</a></li>
          <li><a href="/docs/design/escalation-system">Escalation System</a></li>
          <li><a href="/docs/design/federation">Federation</a></li>
          <li><a href="/docs/design/mail-protocol">Mail Protocol</a></li>
          <li><a href="/docs/design/operational-state">Operational State</a></li>
          <li><a href="/docs/design/plugin-system">Plugin System</a></li>
          <li><a href="/docs/design/property-layers">Property Layers</a></li>
          <li><a href="/docs/design/watchdog-chain">Watchdog Chain</a></li>
        </ul>

        <h3>Examples</h3>
        <ul>
          <li><a href="/docs/examples/hanoi-demo">Hanoi Demo</a></li>
        </ul>

        <h3>Other</h3>
        <ul>
          <li><a href="/docs/beads-native-messaging">Beads Native Messaging</a></li>
          <li><a href="/docs/formula-resolution">Formula Resolution</a></li>
          <li><a href="/docs/mol-mall-design">Mol Mall Design</a></li>
          <li><a href="/docs/why-these-features">Why These Features</a></li>
        </ul>
      </nav>
    </aside>
    <article class="docs-content">
      <h1>{title}</h1>
      <slot />
    </article>
  </div>
</BaseLayout>

<style>
  .docs-container {
    display: flex;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    gap: 2rem;
  }

  .docs-sidebar {
    width: 260px;
    flex-shrink: 0;
    background: var(--color-surface);
    border: 2px solid var(--color-border);
    border-radius: 4px;
    padding: 1.5rem;
    height: fit-content;
    position: sticky;
    top: calc(60px + 2rem);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.5),
      0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .docs-sidebar nav h3 {
    font-family: var(--font-display);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    padding-bottom: 0.5rem;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    border-bottom: 2px solid var(--color-brass);
  }

  .docs-sidebar nav h3:first-child {
    margin-top: 0;
  }

  .docs-sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .docs-sidebar li {
    margin: 0.25rem 0;
  }

  .docs-sidebar a {
    display: block;
    color: var(--color-text);
    text-decoration: none;
    font-size: 0.9rem;
    padding: 0.375rem 0.75rem;
    border-radius: 3px;
    transition: all 0.15s ease;
    border-left: 3px solid transparent;
  }

  .docs-sidebar a:hover {
    color: var(--color-accent);
    background: var(--color-bg-alt);
    border-left-color: var(--color-brass);
    text-decoration: none;
  }

  .docs-content {
    flex: 1;
    min-width: 0;
    background: var(--color-surface);
    border: 2px solid var(--color-border);
    border-radius: 4px;
    padding: 2rem;
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.5),
      0 2px 8px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .docs-container {
      flex-direction: column;
      padding: 1rem;
    }

    .docs-sidebar {
      width: 100%;
      position: static;
    }

    .docs-content {
      padding: 1.5rem;
    }
  }
</style>
