---
import BaseLayout from './BaseLayout.astro';
import usageCommandsData from '../data/usage-commands.json';

interface Command {
  name: string;
  description: string;
}

interface Category {
  name: string;
  slug: string;
  commands: Command[];
}

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
const currentPath = Astro.url.pathname;
const isUsagePage = currentPath.includes('/usage');
const usageCommands = usageCommandsData as Category[];
---

<BaseLayout title={`${title} | Gas Town Docs`} description={description}>
  <picture class="docs-mayor">
    <source srcset="/images/mayor-of-gastown-360.webp" type="image/webp" />
    <img
      src="/images/mayor-of-gastown-360.png"
      alt="Mayor of Gas Town"
      class="docs-mayor-image"
    />
  </picture>
  <div class="docs-container">
    <aside class="docs-sidebar">
      <nav>
        <h3>Overview</h3>
        <ul>
          <li>
            <a href="/" class:list={[{ active: currentPath === '/' }]}
              >Overview</a
            >
          </li>
          <li class="has-children">
            <div class="nav-item-with-toggle">
              <button
                class="toggle-btn"
                aria-expanded={isUsagePage ? "true" : "false"}
                aria-label="Toggle CLI Usage submenu"
              >
                <svg class="chevron" width="12" height="12" viewBox="0 0 12 12">
                  <path d="M4 2 L8 6 L4 10" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              </button>
              <a
                href="/usage"
                class:list={[{ active: currentPath === '/usage' || currentPath === '/usage/' }]}
                >CLI Usage</a
              >
            </div>
            <ul class="usage-commands" data-expanded={isUsagePage ? "true" : "false"}>
              {usageCommands.map((cat) => (
                <li class="usage-category" data-category={cat.slug}>
                  <div class="category-toggle">
                    <svg class="category-chevron" width="10" height="10" viewBox="0 0 12 12" data-expanded={currentPath.includes(`/usage/${cat.slug}`) ? "true" : "false"}>
                      <path d="M4 2 L8 6 L4 10" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                    <a
                      href={`/usage/${cat.slug}`}
                      class:list={['category-link', { active: currentPath.includes(`/usage/${cat.slug}`) }]}
                      data-expanded={currentPath.includes(`/usage/${cat.slug}`) ? "true" : "false"}
                    >
                      {cat.name}
                    </a>
                  </div>
                  <ul class="command-anchors" data-expanded={currentPath.includes(`/usage/${cat.slug}`) ? "true" : "false"}>
                    {cat.commands.map((cmd) => (
                      <li>
                        <a
                          href={`/usage/${cat.slug}#${cmd.name}`}
                          title={cmd.description}
                        >
                          {cmd.name}
                        </a>
                      </li>
                    ))}
                  </ul>
                </li>
              ))}
            </ul>
          </li>
          <li>
            <a
              href="/glossary"
              class:list={[{ active: currentPath.includes('/glossary') }]}
              >Glossary</a
            >
          </li>
          <li>
            <a
              href="/reference"
              class:list={[{ active: currentPath.includes('/reference') }]}
              >Reference</a
            >
          </li>
          <li>
            <a
              href="/installing"
              class:list={[{ active: currentPath.includes('/installing') }]}
              >Installing</a
            >
          </li>
        </ul>

        <h3>Concepts</h3>
        <ul>
          <li>
            <a
              href="/concepts/convoy"
              class:list={[
                { active: currentPath.includes('/concepts/convoy') },
              ]}>Convoy</a
            >
          </li>
          <li>
            <a
              href="/concepts/identity"
              class:list={[
                { active: currentPath.includes('/concepts/identity') },
              ]}>Identity</a
            >
          </li>
          <li>
            <a
              href="/concepts/molecules"
              class:list={[
                { active: currentPath.includes('/concepts/molecules') },
              ]}>Molecules</a
            >
          </li>
          <li>
            <a
              href="/concepts/polecat-lifecycle"
              class:list={[
                { active: currentPath.includes('/concepts/polecat-lifecycle') },
              ]}>Polecat Lifecycle</a
            >
          </li>
          <li>
            <a
              href="/concepts/propulsion-principle"
              class:list={[
                {
                  active: currentPath.includes(
                    '/concepts/propulsion-principle'
                  ),
                },
              ]}>Propulsion Principle</a
            >
          </li>
        </ul>

        <h3>Design</h3>
        <ul>
          <li>
            <a
              href="/design/architecture"
              class:list={[
                { active: currentPath.includes('/design/architecture') },
              ]}>Architecture</a
            >
          </li>
          <li>
            <a
              href="/design/convoy-lifecycle"
              class:list={[
                { active: currentPath.includes('/design/convoy-lifecycle') },
              ]}>Convoy Lifecycle</a
            >
          </li>
          <li>
            <a
              href="/design/dog-pool-architecture"
              class:list={[
                {
                  active: currentPath.includes('/design/dog-pool-architecture'),
                },
              ]}>Dog Pool Architecture</a
            >
          </li>
          <li>
            <a
              href="/design/escalation"
              class:list={[
                {
                  active:
                    currentPath === '/design/escalation' ||
                    currentPath === '/design/escalation/',
                },
              ]}>Escalation</a
            >
          </li>
          <li>
            <a
              href="/design/escalation-system"
              class:list={[
                { active: currentPath.includes('/design/escalation-system') },
              ]}>Escalation System</a
            >
          </li>
          <li>
            <a
              href="/design/federation"
              class:list={[
                { active: currentPath.includes('/design/federation') },
              ]}>Federation</a
            >
          </li>
          <li>
            <a
              href="/design/mail-protocol"
              class:list={[
                { active: currentPath.includes('/design/mail-protocol') },
              ]}>Mail Protocol</a
            >
          </li>
          <li>
            <a
              href="/design/operational-state"
              class:list={[
                { active: currentPath.includes('/design/operational-state') },
              ]}>Operational State</a
            >
          </li>
          <li>
            <a
              href="/design/plugin-system"
              class:list={[
                { active: currentPath.includes('/design/plugin-system') },
              ]}>Plugin System</a
            >
          </li>
          <li>
            <a
              href="/design/property-layers"
              class:list={[
                { active: currentPath.includes('/design/property-layers') },
              ]}>Property Layers</a
            >
          </li>
          <li>
            <a
              href="/design/watchdog-chain"
              class:list={[
                { active: currentPath.includes('/design/watchdog-chain') },
              ]}>Watchdog Chain</a
            >
          </li>
        </ul>

        <h3>Examples</h3>
        <ul>
          <li>
            <a
              href="/examples/hanoi-demo"
              class:list={[
                { active: currentPath.includes('/examples/hanoi-demo') },
              ]}>Hanoi Demo</a
            >
          </li>
        </ul>

        <h3>Other</h3>
        <ul>
          <li>
            <a
              href="/beads-native-messaging"
              class:list={[
                { active: currentPath.includes('/beads-native-messaging') },
              ]}>Beads Native Messaging</a
            >
          </li>
          <li>
            <a
              href="/formula-resolution"
              class:list={[
                { active: currentPath.includes('/formula-resolution') },
              ]}>Formula Resolution</a
            >
          </li>
          <li>
            <a
              href="/mol-mall-design"
              class:list={[
                { active: currentPath.includes('/mol-mall-design') },
              ]}>Mol Mall Design</a
            >
          </li>
          <li>
            <a
              href="/why-these-features"
              class:list={[
                { active: currentPath.includes('/why-these-features') },
              ]}>Why These Features</a
            >
          </li>
        </ul>
      </nav>
    </aside>
    <article class="docs-content">
      <h1>{title}</h1>
      <slot />
    </article>
  </div>
</BaseLayout>

<style>
  /* Mayor image - desktop only, positioned at top left, behind sidebar */
  .docs-mayor {
    position: absolute;
    top: calc(var(--header-height, 80px) + 2rem);
    left: max(2rem, calc((100% - 1200px) / 2 + 2rem));
    z-index: 1;
    opacity: 0.1;
    pointer-events: none;
  }

  .docs-mayor-image {
    width: 180px;
    height: auto;
  }

  @media (max-width: 1024px) {
    .docs-mayor {
      display: none;
    }
  }

  .docs-container {
    display: flex;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    gap: 2rem;
  }

  .docs-sidebar {
    width: 260px;
    flex-shrink: 0;
    background: var(--color-surface);
    border: 2px solid var(--color-border);
    border-radius: 4px;
    padding: 1.5rem;
    height: fit-content;
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.5),
      0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .docs-sidebar nav h3 {
    font-family: var(--font-display);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    padding-bottom: 0.5rem;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    border-bottom: 2px solid var(--color-brass);
  }

  .docs-sidebar nav h3:first-child {
    margin-top: 0;
  }

  .docs-sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .docs-sidebar li {
    margin: 0.25rem 0;
  }

  .docs-sidebar a {
    display: block;
    color: var(--color-text);
    text-decoration: none;
    font-size: 0.9rem;
    padding: 0.375rem 0.75rem;
    border-radius: 3px;
    border-left: 3px solid transparent;
    transition:
      color var(--duration-fast) var(--ease-in-out-smooth),
      background var(--duration-fast) var(--ease-in-out-smooth),
      border-left-color var(--duration-normal) var(--ease-out-expo),
      padding-left var(--duration-normal) var(--ease-out-expo);
  }

  .docs-sidebar a:hover {
    color: var(--color-accent);
    background: var(--color-bg-alt);
    border-left-color: var(--color-brass);
    padding-left: 1rem;
    text-decoration: none;
  }

  .docs-sidebar a.active {
    color: var(--color-accent);
    background: var(--color-bg-alt);
    border-left-color: var(--color-brass);
    font-weight: 600;
  }

  /* Collapsible nav items */
  .has-children .nav-item-with-toggle {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .has-children .nav-item-with-toggle a {
    flex: 1;
  }

  .toggle-btn {
    background: none;
    border: none;
    padding: 0.25rem;
    cursor: pointer;
    color: var(--color-text-muted);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .toggle-btn:hover {
    color: var(--color-accent);
  }

  .toggle-btn .chevron {
    transition: transform 0.2s ease;
  }

  .toggle-btn[aria-expanded="true"] .chevron {
    transform: rotate(90deg);
  }

  /* Usage commands nested navigation - Level 1 indent */
  .usage-commands {
    margin-top: 0.5rem;
    padding-left: 1.25rem;
    display: none;
  }

  .usage-commands[data-expanded="true"] {
    display: block;
  }

  .usage-commands > li {
    margin: 0;
  }

  /* Category toggle container */
  .category-toggle {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .category-chevron {
    flex-shrink: 0;
    color: var(--color-text-muted);
    transition: transform 0.2s ease;
  }

  .category-chevron[data-expanded="true"] {
    transform: rotate(90deg);
  }

  .usage-category .category-link {
    font-size: 0.85rem;
    font-weight: 500;
    padding: 0.3rem 0.5rem;
    flex: 1;
  }

  /* Command anchors - Level 2 indent */
  .command-anchors {
    list-style: none;
    padding: 0;
    margin: 0.25rem 0 0.5rem 0;
    padding-left: 1.5rem;
    display: none;
  }

  .command-anchors[data-expanded="true"] {
    display: block;
  }

  .command-anchors > li > a {
    font-size: 0.75rem;
    padding: 0.15rem 0.5rem;
    font-family: var(--font-mono);
    color: var(--color-text-muted);
  }

  .command-anchors > li > a:hover {
    color: var(--color-accent);
  }

  .docs-content {
    flex: 1;
    min-width: 0;
    background: var(--color-surface);
    border: 2px solid var(--color-border);
    border-radius: 4px;
    padding: 2rem;
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.5),
      0 2px 8px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .docs-container {
      flex-direction: column;
      padding: 1rem;
    }

    .docs-sidebar {
      width: 100%;
      position: static;
    }

    .docs-content {
      padding: 1.5rem;
    }
  }
</style>

<script>
  function toggleUsageMenu(container: Element) {
    const btn = container.querySelector('.toggle-btn');
    const list = container.querySelector('.usage-commands');
    if (!btn || !list) return;

    const expanded = btn.getAttribute('aria-expanded') === 'true';
    btn.setAttribute('aria-expanded', String(!expanded));
    list.setAttribute('data-expanded', String(!expanded));
  }

  function toggleCategory(categoryEl: Element) {
    const link = categoryEl.querySelector('.category-link');
    const list = categoryEl.querySelector('.command-anchors');
    const chevron = categoryEl.querySelector('.category-chevron');
    if (!link || !list) return;

    const isExpanded = link.getAttribute('data-expanded') === 'true';

    // Collapse all categories first
    document.querySelectorAll('.usage-category').forEach(cat => {
      const catLink = cat.querySelector('.category-link');
      const catList = cat.querySelector('.command-anchors');
      const catChevron = cat.querySelector('.category-chevron');
      if (catLink && catList) {
        catLink.setAttribute('data-expanded', 'false');
        catList.setAttribute('data-expanded', 'false');
        catChevron?.setAttribute('data-expanded', 'false');
      }
    });

    // If it wasn't expanded, expand it now
    if (!isExpanded) {
      link.setAttribute('data-expanded', 'true');
      list.setAttribute('data-expanded', 'true');
      chevron?.setAttribute('data-expanded', 'true');
    }
  }

  document.querySelectorAll('.has-children').forEach(container => {
    const btn = container.querySelector('.toggle-btn');
    const link = container.querySelector('.nav-item-with-toggle > a');

    btn?.addEventListener('click', (e) => {
      e.preventDefault();
      toggleUsageMenu(container);
    });

    link?.addEventListener('click', (e) => {
      e.preventDefault();
      toggleUsageMenu(container);
    });
  });

  // Category toggle - clicking on category name shows/hides commands
  document.querySelectorAll('.usage-category').forEach(category => {
    const link = category.querySelector('.category-link');
    link?.addEventListener('click', (e) => {
      e.preventDefault();
      toggleCategory(category);
    });
  });
</script>
