---
/**
 * Custom SiteTitle component that links to the main Gas Town site
 * instead of the docs root.
 */
const isDev = import.meta.env.DEV;
const mainSiteUrl = isDev ? 'http://localhost:4321' : 'https://gastownhall.ai';
---

<a href={mainSiteUrl} class="site-title sl-flex">
  <span translate="no">Gas Town Hall</span>
</a>

<style>
  /* Match main site .site-header .logo exactly */
  .site-title {
    align-items: center;
    gap: var(--sl-nav-gap);
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.5rem;
    color: var(--color-text-light);
    letter-spacing: 0.1em;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    text-decoration: none;
    white-space: nowrap;
  }

  .site-title:hover {
    color: var(--color-brass);
    text-shadow:
      2px 2px 4px rgba(0, 0, 0, 0.5),
      0 0 20px rgba(205, 127, 50, 0.4);
  }
</style>
