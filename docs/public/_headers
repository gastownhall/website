# Cloudflare Pages headers for docs.gastownhall.ai

# HTML pages - always revalidate to get fresh asset references
/*.html
  Cache-Control: no-cache

/
  Cache-Control: no-cache

# Hashed assets (CSS/JS) - immutable, cache forever
/_astro/*
  Cache-Control: public, max-age=31536000, immutable

# Images - cache for a day
/images/*
  Cache-Control: public, max-age=86400

# Search index - revalidate frequently
/pagefind/*
  Cache-Control: public, max-age=3600, must-revalidate
